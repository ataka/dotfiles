
# SketchyBar 用の App Font をインストールする
install-sketchybar-app-font:
    curl -L https://github.com/kvndrsslr/sketchybar-app-font/releases/download/v2.0.30/sketchybar-app-font.ttf -o $HOME/Library/Fonts/sketchybar-app-font.ttf

# SketchyBar 用の Icon Map スクリプトをインストールする
install-sketchybar-icon-map:
    curl -L https://github.com/kvndrsslr/sketchybar-app-font/releases/download/v2.0.30/icon_map.sh -o ./sketchybar/dot-config/sketchybar/plugins/icon_map.sh
